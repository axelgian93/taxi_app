{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    /* Emitir JS en build */
    "noEmit": false,

    /* Para build prod: relajar estos flags sin afectar tu tsconfig de dev */
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/routes/**",
    "src/plugins/**",
    "scripts/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "node_modules",
    "dist"
  ]
}
